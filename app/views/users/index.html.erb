<div class="content round">
  <div class="row">
    <div class="span12">
      
      <%= render 'layouts/messages' %>

      <h3>Users</h3>

      <%= simple_form_for(:users, :url => users_path, :method => :get, :html => {:class => 'form-horizontal'}) do |f| %>
        <div class="form-inputs">
          <%= f.input :search, :wrapper => :prepend do %>
            <span class="add-on"><i class="icon-search"></i></span><%= text_field_tag :search, params[:search],  :placeholder => 'by username or email' %>
          <% end %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Search", :name => nil, :class => 'btn btn-primary' %>
        </div>   
      <% end %>
      
      <% if @users.any? %>
        <section id="no-more-tables"> 
          <table class="table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th ></th>
                <th>Username</th>
                <th>Email</th>
                <th>Registered</th>
                <th>Roles</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody id="users_results">
              <%= render :partial => "user", :collection => @users %>
            </tbody>
          </table>  
        </section>
      <% end %> 

      <%= will_paginate @users %>

    </div>
  </div>
</div>

<script>
$("#hint a").tooltip()
</script>








