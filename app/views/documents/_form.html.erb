<%= simple_form_for(@document, :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.error_notification %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-inputs">
    <%= f.input :title, :wrapper => :prepend do %>
     <span class="add-on"><i class="icon-pencil"></i></span><%= f.input_field :title, :required => true, :autofocus => true, :size => '' %>
    <% end %>
    <%= f.input :doc_type, label: 'Document Type', :wrapper => :prepend do %>
      <span class="add-on"><i class="icon-wrench"></i></span><%= f.collection_select(:document_type_id, DocumentType.all, :id, :name) %>
    <% end %>
    <%= f.input :body, label: 'Content', :wrapper => :prepend do %>
     <span class="add-on"><i class="icon-pencil"></i></span><%= f.text_area :body, :required => true, :rows => 15 %>
    <% end %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
