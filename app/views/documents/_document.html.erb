<% if document.is_private? and document.user_id == current_user.id or !document.is_private? %>
<tr>
  <td data-title="Title" id="hint"><%= link_to document.title, document, :title => display_delimited_string(document.document_types), :'data-placement' => 'right' %></td>
  <td data-title="Doc Types"><%= display_delimited_string(document.document_types) %></td>
  <td><%= link_to 'Edit Document', edit_document_path(document), :class => 'btn btn-primary btn-mini' %></td>
  <td><%= link_to 'Destroy Document', document, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  <td data-title="User"><%= User.find_by_id(document.user_id).name %></td>
  <td data-title="Private"><%= document.is_private %></td>
  <td data-title="Created"><%= document.created_at.to_s(:human_short) %></td>
</tr>
<% end %> 
