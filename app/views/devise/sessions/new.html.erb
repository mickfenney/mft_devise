<div class="content round">
  <div class="row">
    <div class="span8">

      <%= render 'layouts/messages' %>
      <h3>Sign in</h3>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :wrapper => :prepend do %>
            <span class="add-on"><i class="icon-envelope"></i></span><%= f.input_field :email, :autofocus => true, :size => '', :placeholder => 'Email' %>
          <% end %>
          <%= f.input :password, :wrapper => :prepend do %>
            <span class="add-on"><i class="icon-eye-close"></i></span><%= f.input_field :password, :size => '', :placeholder => 'Password' %>
          <% end %>
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>