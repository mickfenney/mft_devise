<div class="content round">
  <div class="row-fluid">
    <div class="span12">

      <%= render 'layouts/messages' %>

      <h3>Picture Gallery</h3>

      <p>
        <b>Name:</b>
        <%= @gallery.name %>
      </p>    
      
      <p>
        <b>User:</b>
        <%= User.find_by_id(@gallery.user_id).name %>
      </p>

      <% if @gallery.created_at == @gallery.updated_at %>
        <p>
          <b>Created:</b>
            <%= @gallery.created_at.to_s(:human_short_time) %>
        </p>
      <% else %>
        <p>
          <b>Created:</b>
            <%= @gallery.created_at.to_s(:human_short_time) %>
        </p>    
        <p>
          <b>Updated:</b>
            <%= @gallery.updated_at.to_s(:human_short_time) %>
        </p>
      <% end %>        

      <p>
        <%= link_to "Add a Picture", new_picture_path(:gallery_id => @gallery) %> |
        <%= link_to "Edit Gallery", edit_gallery_path %> | 
        <%= link_to "Remove Gallery", @gallery, :confirm => 'Are you sure?', :method => :delete %> |
        <%= link_to "View Galleries", galleries_path %>
      </p>      

      <div id="pictures">
        <% for picture in @gallery.pictures %>
          <div class="picture">
            <% if RUBY_PLATFORM =~ /mingw/i %>
              <%= image_tag picture.image_url(), size: "150x150" if picture.image? %>
            <% else %>
              <%= image_tag picture.image_url(:thumb) if picture.image? %> 
            <% end %>
            <div class="name"><%= picture.name %></div>
            <div class="actions">
              <%= link_to "edit", edit_picture_path(picture) %> |
              <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
            </div>
          </div>
        <% end %>
        <div class="clear"></div>
      </div>

    </div>
  </div>
</div>