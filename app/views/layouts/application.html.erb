<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= full_title(@page_title) %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : ENV["SITE_NAME"] %>">
    <%= stylesheet_link_tag @css_theme, :media => "all" %>
    <%= stylesheet_link_tag "no-more-tables", :media => "all" %>
    <%= stylesheet_link_tag "main", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
  </head>
  <body class="<%= controller_name %> <%= action_name %> round">
    <%= render 'layouts/navigation' %>
    <% if controller_name == 'home' %>
      <%= render 'layouts/carousel' %>
    <% end %>
    <container>
      <div id="main" role="main">
        <div class="container">
          <%= yield %>
        </div> <!--! end of .container -->
        <br />
        <%= render 'layouts/footer' %>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </container>
  </body>
</html>
