<%= simple_form_for(@picture, :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.error_notification %>

  <%= f.hidden_field :gallery_id %>

  <div class="form-inputs">
    <%= f.input :name, :wrapper => :prepend do %>
     <span class="add-on"><i class="icon-pencil"></i></span><%= f.input_field :name, :required => true, :size => '' %>
    <% end %>
    <%= f.input :image, :wrapper => :prepend do %>
      <%= f.input_field :image, :class => 'btn btn-primary' %>
      <%= f.label :remote_image_url, "or image URL" %>
    <% end %>
    <%= f.input :remote_image_url, :wrapper => :prepend do %>
      <span class="add-on"><i class="icon-pencil"></i></span><%= f.input_field :remote_image_url %>     
    <% end %>  
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
