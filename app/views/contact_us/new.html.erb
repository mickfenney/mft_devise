<div class="content round">
  <div class="row">
    <div class="span12">

      <%= render 'layouts/messages' %>

      <h3>Contact Us</h3>

      <%= simple_form_for(@email_message, :url => contact_path, :method => :post, :html => { :class => 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-user"></i></span><%= f.input_field :name, :required => true, :autofocus => true, :size => '' %>
          <% end %>
          <%= f.input :email, :wrapper => :prepend do %>
            <span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email, :required => true, :size => '' %>
          <% end %>
          <%= f.input :content, label: 'Message', :wrapper => :prepend do %>
           <span class="add-on"><i class="icon-pencil"></i></span><%= f.text_area :content, :required => true, :rows => 5 %>
          <% end %>  
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send Message", :class => 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
